                                <Image Height="20" Margin="10,0,0,4" Source="ms-appx:///Image/plantcyc.png"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,0" Orientation="Vertical" Width="200">
